<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean class="com.kodnest.SpringExample.SpringProject4.Employee" id="emp">
<!-- Setting the values for list type -->
<property name="technology">
   <list>
       <value>Java</value>
       <value>Python</value>
       <value>SQL</value> 
   </list>
</property>
<!-- Setting the values for set type -->
<property name="Project">
     <set>
        <value>Project-1</value>
          <value>Project-2</value>
          <value>Project-3</value>
     </set>
</property>
<!-- Setting the values for set type -->
<property name="company">
   <map>
      <entry key="121" value="XYZ"></entry>
      <entry key="325" value="PQR"></entry>
   </map>
</property>

</bean>
</beans>